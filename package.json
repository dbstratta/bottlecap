{
  "name": "bottlecap",
  "description": "A decentralized cryptocurrency",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon --exec babel-node --extensions \".ts,.tsx\" src/index.ts",
    "build": "babel src --out-dir dist --ignore spec.ts,test.ts",
    "lint": "tslint --project . --fix",
    "lint:ci": "yarn commitlint-travis && yarn lint:shell && prettier --list-different src/**/* && tslint --project .",
    "lint:shell": "shellcheck scripts/**/*.sh",
    "test": "jest",
    "test:ci": "yarn test --coverage",
    "test:watch": "jest --onlyChanged",
    "posttest:ci": "yarn coverage",
    "coverage": "codecov",
    "prebuild": "yarn typecheck && yarn clean",
    "typecheck": "tsc",
    "clean": "rimraf dist",
    "commit": "commit"
  },
  "homepage": "https://github.com/strattadb/bottlecap",
  "repository": "git@github.com:strattadb/bottlecap.git",
  "author": {
    "name": "Diego Stratta",
    "email": "strattadb@gmail.com",
    "url": "https://github.com/strattadb"
  },
  "bugs": {
    "url": "https://github.com/strattadb/bottlecap/issues"
  },
  "keywords": [
    "cryptocurrency",
    "blockchain",
    "bottlecap"
  ],
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/node": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-typescript": "^7.0.0-beta.51",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/prompt-cli": "^7.0.0",
    "@commitlint/travis-cli": "^7.0.0",
    "@playlyfe/gql": "^2.6.0",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.0.1",
    "codecov": "^3.0.2",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "markdownlint-cli": "^0.10.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/ramda": "^0.25.33",
    "apollo-server": "^2.0.0-rc.0",
    "elliptic": "^6.4.0",
    "graphql": "^0.13.2",
    "ramda": "^0.25.0",
    "winston": "^3.0.0"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "engines": {
    "node": ">= 10.4.0"
  }
}
