{
  "name": "bottlecap",
  "description": "A decentralized cryptocurrency",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "nodemon --exec babel-node --extensions \".ts,.tsx\" src/index.ts",
    "start:prod": "node dist/index.js",
    "build": "babel --extensions \".ts,.tsx\" --out-dir dist src",
    "lint": "yarn lint:shell && yarn lint:md && yarn lint:js && yarn lint:ts",
    "lint:ci": "yarn lint:ci:commit && yarn lint:ci:shell && yarn lint:ci:md && yarn lint:ci:js && yarn format:ci && yarn lint:ci:ts",
    "lint:ts": "tslint --project . --fix --exclude node_modules",
    "lint:ci:ts": "tslint --project . --exclude node_modules",
    "lint:shell": "shellcheck scripts/**/*.sh",
    "lint:ci:shell": "shellcheck scripts/**/*.sh",
    "lint:js": "eslint --fix .",
    "lint:ci:js": "eslint .",
    "lint:md": "yarn markdownlint --ignore node_modules **/*.md",
    "lint:ci:md": "yarn markdownlint --ignore node_modules **/*.md",
    "lint:ci:commit": "commitlint-travis",
    "format": "prettier --write src/**/*",
    "format:ci": "prettier --list-different src/**/*",
    "test": "jest",
    "test:ci": "yarn test --coverage",
    "test:watch": "jest --onlyChanged --watch",
    "posttest:ci": "yarn coverage",
    "coverage": "codecov",
    "prebuild": "yarn typecheck:ts && yarn clean",
    "typecheck:ts": "tsc",
    "clean": "rimraf dist",
    "commit": "commit"
  },
  "homepage": "https://github.com/strattadb/bottlecap",
  "repository": "git@github.com:strattadb/bottlecap.git",
  "author": {
    "name": "Diego Stratta",
    "email": "strattadb@gmail.com",
    "url": "https://github.com/strattadb"
  },
  "bugs": {
    "url": "https://github.com/strattadb/bottlecap/issues"
  },
  "keywords": [
    "cryptocurrency",
    "blockchain",
    "bottlecap"
  ],
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/node": "^7.0.0-beta.51",
    "@babel/plugin-proposal-optional-catch-binding": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-typescript": "^7.0.0-beta.51",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/prompt-cli": "^7.0.0",
    "@commitlint/travis-cli": "^7.0.0",
    "@playlyfe/gql": "^2.6.0",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "@types/ramda": "^0.25.33",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^5.1.2",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "codecov": "^3.0.2",
    "eslint": "^5.0.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "markdownlint-cli": "^0.10.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.5",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "apollo-server": "^2.0.0-rc.0",
    "elliptic": "^6.4.0",
    "graphql": "^0.13.2",
    "ramda": "^0.25.0",
    "uuid": "^3.3.0",
    "winston": "^3.0.0",
    "ws": "^5.2.0"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
