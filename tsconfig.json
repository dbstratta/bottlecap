{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "target": "ESNext",
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
